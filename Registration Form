        function validateForm() {
          if (!validateName() || !validatePhone() || !validateEmail() || !validateDesignation() || !validateGrade Pay() || !validatePlace of Posting() || !validateDivision() || !validateWanted Post() || !validateWanted Place of Posting() || !validateWanted Division() || !validateWanted Remarks if any()) {

            alert("Form not submitted");//Validation Message
